<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>RunnerFramework</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Lib\" />
    <None Remove="Solution\" />
    <None Remove="Solution\Example\" />
    <None Remove="Solution\Testing\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Lib\" />
    <Folder Include="Solution\" />
    <Folder Include="Solution\Example\" />
    <Folder Include="Solution\Testing\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="App.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Compile>
  </ItemGroup>
</Project>
